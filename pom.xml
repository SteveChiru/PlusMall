        <servlet-api.version>2.5</servlet-api.version>
        <jsp-api.version>2.1</jsp-api.version>
        <pagehelper.version>5.1.4</pagehelper.version>
        <dubbo.version>2.8.4</dubbo.version>
        <zookeeper.version>3.4.12</zookeeper.version>
        <javassist.version>3.11.0.GA</javassist.version>
        <zkclient.version>0.1</zkclient.version>
        <mybatis-generator.version>1.3.2</mybatis-generator.version>
        <fastdfs.version>1.27-SNAPSHOT</fastdfs.version>
        <commons-fileupload.version>1.3.3</commons-fileupload.version>
        <commons-io.version>2.4</commons-io.version>
        <fastJson.version>1.2.47</fastJson.version>
        <jedis.version>2.9.0</jedis.version>
        <springDataRedis.version>1.7.2.RELEASE</springDataRedis.version>
        <springDataSolr.version>1.5.5.RELEASE</springDataSolr.version>
        <freemarker.version>2.3.23</freemarker.version>
        <activemqClient.version>5.13.4</activemqClient.version>

        <plusmall-pojo.version>1.0-SNAPSHOT</plusmall-pojo.version>
        <plusmall-dao.version>1.0-SNAPSHOT</plusmall-dao.version>
        <plusmall-commons.version>1.0-SNAPSHOT</plusmall-commons.version>

        <!--plugins version-->
        <maven-compiler.version>3.2</maven-compiler.version>
        <tomcat7-maven.version>2.2</tomcat7-maven.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!--spring-core-->
            <dependency>
                <groupId>org.springframework</groupId>
