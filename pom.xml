            </dependency>

            <!-- plusmall-pojo -->
            <dependency>
                <groupId>org.plusmall</groupId>
                <artifactId>plusmall-pojo</artifactId>
                <version>${plusmall-pojo.version}</version>
            </dependency>
            <!-- plusmall-dao -->
            <dependency>
                <groupId>org.plusmall</groupId>
                <artifactId>plusmall-dao</artifactId>
